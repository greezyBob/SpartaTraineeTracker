@model IEnumerable<TraineeTrackerApp.Models.Week>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Continue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GitHubLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechnicalSkill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultantSkill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spartan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Continue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GitHubLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicalSkill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultantSkill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spartan.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
